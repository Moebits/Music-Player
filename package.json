{
  "name": "music-player",
  "version": "0.2.7",
  "description": "A music player with real-time pitch shifting, reversing, and time stretching",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run clean && webpack && cross-env DEVELOPMENT=true electron dist/main.js",
    "clean": "del-cli ./dist",
    "build": "npm run clean ./build && webpack && electron-builder -p never",
    "release": "npm run clean ./build && webpack && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder -mwl -p always"
  },
  "keywords": [
    "music",
    "audio",
    "midi",
    "player",
    "anime",
    "cute"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Moebits/Music-Player"
  },
  "build": {
    "appId": "com.moebits.music-player",
    "productName": "Music Player",
    "icon": "./assets/icon.png",
    "directories": {
      "buildResources": "assets",
      "output": "build"
    },
    "mac": {
      "target": {
        "target": "dmg",
        "arch": "arm64"
      },
      "category": "public.app-category.music",
      "extraFiles": [
        "structures/bitcrusher.js",
        "structures/lfo.js",
        "structures/soundtouch.js"
      ]
    },
    "dmg": {
      "title": "Music Player",
      "background": "./assets/background.png",
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": "x64"
      },
      "extraFiles": [
        "structures/bitcrusher.js",
        "structures/lfo.js",
        "structures/soundtouch.js"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "Music Player",
      "createDesktopShortcut": "always",
      "installerSidebar": "./assets/installer.bmp",
      "uninstallerSidebar": "./assets/installer.bmp"
    },
    "linux": {
      "target": {
        "target": "appImage",
        "arch": "x64"
      },
      "category": "Audio",
      "extraFiles": [
        "structures/bitcrusher.js",
        "structures/lfo.js",
        "structures/soundtouch.js"
      ]
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "repo": "Music-Player",
      "owner": "Moebits",
      "releaseType": "draft"
    },
    "fileAssociations": [
      {
        "ext": "mp3",
        "description": "Audio files"
      },
      {
        "ext": "wav",
        "description": "Audio files"
      },
      {
        "ext": "ogg",
        "description": "Audio files"
      },
      {
        "ext": "flac",
        "description": "Audio files"
      },
      {
        "ext": "aac",
        "description": "Audio files"
      },
      {
        "ext": "mid",
        "description": "MIDI files"
      }
    ]
  },
  "author": "Moebits",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-slider": "^1.3.1",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "del-cli": "^3.0.1",
    "electron": "^28.2.1",
    "electron-builder": "^23.0.2",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.1.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^5.6.0",
    "less": "^4.1.0",
    "less-loader": "^7.3.0",
    "mini-css-extract-plugin": "^1.3.5",
    "node-loader": "^1.0.2",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.18.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "@electron/osx-sign": "^1.0.1",
    "@electron/remote": "^2.1.2",
    "@tonejs/midi": "^2.0.27",
    "audio-encoder": "^1.0.2",
    "bootstrap": "^4.6.0",
    "electron-shortcuts": "^0.4.0",
    "electron-store": "^8.0.0",
    "electron-updater": "^4.3.5",
    "jsmediatags": "^3.9.7",
    "react": "^17.0.1",
    "react-bootstrap": "^1.4.3",
    "react-dom": "^17.0.1",
    "react-slider": "^1.3.1",
    "soundcloud.ts": "^0.4.1",
    "tone": "^14.7.39",
    "youtube.ts": "^0.2.6"
  }
}
